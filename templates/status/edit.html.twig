{% extends 'base.html.twig' %}

{% block title %}Edit status!{% endblock %}

{% block body %}
    <h1 class="title">Edit status!</h1>
    <div class="list">
    <form action="{{path('status_update', {id: status.id})}}" method="POST">
            <div class="create-name">Name: <input class="input" type="text" name="status_title" value="{{status.title}}"></div>
            <div class="add-btn">
                <button class="add" type="submit">Edit status</button>
            </div>
        </form>
    </div>
{% endblock %}